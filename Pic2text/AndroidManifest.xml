<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.example.pic2text"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name">
        <activity android:name=".MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         
        <activity
            android:name=".OptionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.tutorial.CLEARSCREEN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TakePicture"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.tutorial.TAKE_PICTURE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConvertPic"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.tutorial.CONVERT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConvertPics"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.tutorial.CONVERTS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
                
 
    </application>
</manifest>